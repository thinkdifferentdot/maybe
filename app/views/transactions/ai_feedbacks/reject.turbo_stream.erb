<% if @id_suffix == "review" %>
  <%= turbo_stream.remove dom_id(@transaction, "review_row") %>
<% else %>
  <%= turbo_stream.replace @entry, partial: "entries/entry", locals: { entry: @entry } %>
<% end %>
<%= turbo_stream.append "notification-tray", partial: "shared/notifications/notice", locals: { message: flash[:notice] } %> 
